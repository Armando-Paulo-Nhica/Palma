<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>PALMA - Stock</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="../../images/favicon.png">
    <!-- Datatable -->
    <link href="../../vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
    <!-- Include Bootstrap Icons CSS -->
<!-- <link href="../../fonts/fontawesome-free-6.2.1-web/css/all.css" rel="stylesheet"> -->


    <!-- Custom Stylesheet -->
    <link href="../../css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="../../css/custom/style.css">
    
</head>

<body>

    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->


    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Nav header start
        ***********************************-->
        <div class="nav-header bg-logo">
            <a href="/" class="brand-logo">
                <!-- <img class="logo-abbr" src="../../images/logo.png" style="width: 100px;" alt="logo"> -->
                <img src="../../images/logo.png" alt="">
               
            </a>

            <div class="nav-control">
                <div class="hamburger">
                    <span class="line"></span><span class="line"></span><span class="line"></span>
                </div>
            </div>
        </div>
        <!--**********************************
            Nav header end
        ***********************************-->

        <!--**********************************
            Header start
        ***********************************-->
        <div class="header" id="header">

        </div>
        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->

        <!--**********************************
            Sidebar start
        ***********************************-->
        <div class="quixnav" id="quixnav">

        </div>

        <!--**********************************
            Sidebar end
        ***********************************-->

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <div class="container-fluid">
                <div class="row page-titles mx-0">
                    <div class="col-sm-6 p-md-0">
                        <div class="welcome-text">
                            <h4>REGISTAR NOVO PRODUTO</h4>
                        </div>
                    </div>
                    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Produtos</a></li>
                            <li class="breadcrumb-item active"><a href="javascript:void(0)">Novo</a></li>
                        </ol>
                    </div>
                </div>
                <!-- row -->
                <div class="row">
                    <div class="col-xl-12 col-xxl-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Dados do produto</h4>
                            
                            </div>
                            <div class="card-body">
                                <div class="basic-form">
                                    <form>

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label>Código</label>
                                                <input type="text" id="barcode" class="form-control" placeholder="Código de produto" autofocus>
                                            </div>
                                             <div class="form-group col-md-6">
                                                <label>Valor de venda <i style="color: red;">*</i></label>
                                                <input type="text" id="sell" class="form-control" placeholder="Digite aqui">
                                            </div>
                                            
                                            <div class="form-group col-md-12">
                                                <label>Nome do produto <i style="color: red;">*</i> </label>
                                                <input type="text" id="name" class="form-control" placeholder="Digite aqui" required>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label>Quantidade <i style="color: red;">*</i></label>
                                                <input type="number" min="1" id="quantity" class="form-control" placeholder="Digite aqui">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label>Data de validade</label>
                                                <input type="date" id="expiresIn" class="form-control" placeholder="Digite aqui">
                                            </div>
                                          

                                            <div class="form-group col-md-12 input-group">
                                                <div class="form-group col-md-12">
                                                    <label>Categoria <i style="color: red;">*</i></label>
                                                    <select id="category" class="form-control">
                                                        <option selected disabled>Selecione a categoria</option>
                                                    </select>
                                            </div>
                                            
                                            </div>
                                        </div>
                                        <div class="form-group d-flex justify-content-end mx-3">
                                                <a href="#" style="color: #3B4E87; font-weight: 400;" data-toggle="modal" data-target="#newCategory"><i class="fas fa-plus-circle"></i> Nova categoria</a>
                                            </div>
                                    </form>
                                </div>
                            </div>
                        </div>


                        <!-- Submit section -->
                        <div class="card">
                            <div class="card-body">
                                <div class="basic-form">
                                    <form>
                                        <div class="row">
                                            <div class="form-group col-md-12 mt-3 px-3 d-flex justify-content-between">
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>
                                                    <label class="form-check-label" for="flexSwitchCheckChecked">Imprimir código de barra</label>
                                                </div>
                                                
                                                <div>
                                                    <button type="submit" id="registerBtn" class="btn bg-btn">Registar</button>
                                                </div>
                                            </div>
                                        </div>
                                        
                                    </form>
                                </div>
                            </div>
                        </div>

                        
                        
                       
                    </div>


                </div>
            </div>
        </div>
      
        <!-- Modal section -->
         

<!-- Start category modal -->
<div class="row">
<div class="modal fade lg " id="newCategory">
    <div class="modal-dialog modal-dialog-centered" >
        <div class="modal-content px-3">
            <div class="modal-header">
                <h5 class="modal-title">Registar nova categoria <h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-row col-md-12 p-0">
                        <div class="form-group col-md-12 p-0">
                            <label>Nome <i style="color: red;">*</i></label>
                            <input type="text" id="categoryName" class="form-control" placeholder="Digite o nome da categoria">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Registar</button>
            </div>
        </div>
    </div>
</div> 
</div>

<!-- End category modal -->
<div id="_passwordModal"></div>
    <div class="footer">
            <div class="copyright " id="footer-info">
                
            </div>
    </div>
     
    
    <!--**********************************
        Main wrapper end
    ***********************************-->

    <!--**********************************
        Scripts
    ***********************************-->
    <!-- Required vendors -->
    <script src="../../vendor/global/global.min.js"></script>
    <script src="../../js/product/index.js"></script>
    <script src="../../js/components.js"></script>
    <script src="../../js/quixnav-init.js"></script>
    <script src="../../js/custom.min.js"></script>

      <!-- Sweet alert -->
      <script src="../../js/sweetalert.min.js"></script>
    
</body>

</html>