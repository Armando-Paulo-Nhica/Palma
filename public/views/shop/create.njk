</head>

<body>

    <!--*******************
        Preloader start
    ********************-->
     <div id="preloader" class="loader">
       <div class="spinner"></div>
    </div>
    <!--*******************
        Preloader end
    ********************-->


    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Nav header start
        ***********************************-->
        <div class="nav-header bg-logo">
            <a href="/" class="brand-logo">
                <img src="../../images/logo.png" alt="">
               
            </a>

            <div class="nav-control">
                <div class="hamburger">
                    <span class="line"></span><span class="line"></span><span class="line"></span>
                </div>
            </div>
        </div>
        <!--**********************************
            Nav header end
        ***********************************-->

        <!--**********************************
            Header start
        ***********************************-->
        <div class="header" id="header">

        </div>
        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->

        <!--**********************************
            Sidebar start
        ***********************************-->
        <div class="quixnav" id="quixnav">

        </div>

        <!--**********************************
            Sidebar end
        ***********************************-->

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <div class="container-fluid">
                <div class="row page-titles mx-0">
                    <div class="col-sm-6 p-md-0">
                        <div class="welcome-text">
                            <h4>REGISTAR NOVA COMPRA</h4>
                        </div>
                    </div>
                    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Compras</a></li>
                            <li class="breadcrumb-item active"><a href="javascript:void(0)">Registar</a></li>
                        </ol>
                    </div>
                </div>
                <!-- row -->
                <div class="row">
                    <div class="col-xl-12 col-xxl-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Dados do produto</h4>
                                <div class="counter d-flex justify-content-end">
                                     <i id="totalIn"></i>
                                    
                                </div>

                            </div>
                            <div class="card-body">
                                <div class="basic-form">
                                    <form>

                                        <div class="form-row">
                                            <div class="form-group col-md-3">
                                                <label>Código</label>
                                                <input type="text" id="barcode" class="form-control" placeholder="Código de produto" autofocus>
                                            </div>
                                            <div class="form-group col-md-3">
                                                <label>Nr de Factura</label>
                                                <input type="number" id="invoice" class="form-control" placeholder="Número de factura" >
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label>Nome do produto <i style="color: red;">*</i> </label>
                                                <input type="text" id="name" class="form-control" placeholder="Digite aqui" required>
                                            </div>
                                           
                                           
                                            <div class="form-group col-md-3">
                                                <label>Valor de compra <i style="color: red;">*</i></label>
                                                <input type="number" id="shop" class="form-control" placeholder="Digite aqui">
                                            </div>
                                            <div class="form-group col-md-3">
                                                <label>Valor de venda <i style="color: red;">*</i></label>
                                                <input type="number" id="sell" class="form-control" placeholder="Digite aqui">
                                            </div>
                                            <div class="form-group col-md-3">
                                                <label>Quantidade <i style="color: red;">*</i></label>
                                                <input type="number" min="1" id="quantity" class="form-control" placeholder="Digite aqui">
                                            </div>
                                            <div class="form-group col-md-3">
                                                <label>Data de validade</label>
                                                <input type="date" id="expiresIn" class="form-control" placeholder="Digite aqui">
                                            </div>
                                          
                                            <div class="form-group col-md-6 mt-4 input-group">
                                                    <div class="input-group-prepend bg-primary" data-toggle="modal" data-target="#addCategory">
                                                        <div class="input-group-text btn-primary bt">+</div>
                                                    </div>
                                                    <select id="categories" name="categories" class="form-control">
                                                        <option value="" selected disabled>Selecione a categoria</option>
                                                    </select>
                                            </div>

                                            <div class="form-group col-md-6 mt-4 input-group">
                                                
                                                <div class="input-group- bg-primary2" data-toggle="modal" data-target="#addSupplier">
                                                    <div class="input-group-text btn-primary bt" >+</div>
                                                </div>
                                                <select id="suppliers" name="suppliers" class="form-control">
                                                    <option value="" selected disabled>Selecione o fornecedor</option>
                                                </select>
                                            </div>
                                            
                                        </div>
                                      
                                        <div class="form-group d-flex justify-content-end">
                                            <a href="#" style="color: #3B4E87; font-weight: 400;" data-toggle="modal" data-target="#addProduct"><i class="fas fa-plus-circle"></i> Adicionar produto</a>
                                        </div>
                                        
                                    </form>
                                </div>
                            </div>
                        </div>


                        <!-- Supplier and category -->
                        <div class="card">
                            <div class="card-body">
                                <div class="basic-form">
                                    <form>
                                        <div class="row">
                                            <div class="form-group col-md-12 mt-3 px-3 d-flex justify-content-between">
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>
                                                    <label class="form-check-label" for="flexSwitchCheckChecked">Imprimir código de barra</label>
                                                </div>
                                                
                                                <div>
                                                    <button type="submit" id="registerBtn" class="btn btn-primary">Registar compra</button>
                                                </div>
                                            </div>
                                        </div>
                                        
                                    </form>
                                </div>
                            </div>
                        </div>

                        
                        
                       
                    </div>


                </div>
            </div>
        </div>
      
        <!-- Modal section -->
         <!-- Add product modal -->
 <div class="modal fade lg" id="addProduct">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content px-3">
            <div class="modal-header">
                <h5 class="modal-title">Adicionar produto à compra</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Código</label>
                            <input type="text" id="barcode1" class="form-control" placeholder="Digite aqui" autofocus>
                        </div>
                      
                        <div class="form-group col-md-12">
                            <label>Nome do produto <i style="color: red;">*</i> </label>
                            <input type="text" id="name1" class="form-control" placeholder="Digite aqui" required>
                        </div>
                       
                        <div class="form-group col-md-6">
                            <label>Valor de compra <i style="color: red;">*</i></label>
                            <input type="text" id="shop1" class="form-control" placeholder="Digite aqui">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Valor de venda <i style="color: red;">*</i></label>
                            <input type="text" id="sell1" class="form-control" placeholder="Digite aqui">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Quantidade <i style="color: red;">*</i></label>
                            <input type="number" min="1" id="quantity1" class="form-control" placeholder="Digite aqui">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Data de validade</label>
                            <input type="date" id="expiresIn1" class="form-control" placeholder="Digite aqui">
                        </div>
                        <div class="form-group col-md-12 mt-2 input-group">
                            <div class="input-group-prepend bg-primary" id="addCategoryModal">
                                <div class="input-group-text btn-primary">+</div>
                            </div>
                            <select id="categoryName1" name="categoryName1" class="form-control">
                                <option value="" selected disabled>Selecione a categoria</option>
                            </select>
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="addPurchase">Adicionar produto</button>
            </div>
        </div>
    </div>
</div> 
<!-- Add product Modal end -->


<!-- Add supplier modal start -->
<div class="modal fade lg" id="addSupplier">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content px-3">
            <div class="modal-header">
                <h5 class="modal-title">Registar novo fornecedor <h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Nome <i style="color: red;">*</i></label>
                            <input type="text" id="supplierName" class="form-control" placeholder="Digite o nome do fornecedor">
                        </div>
                        <div class="form-group col-md-6">
                            <label>E-mail </label>
                            <input type="text" id="email" class="form-control" placeholder="Digite o e-mail" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Contacto </label>
                            <input type="text" id="contact" class="form-control" placeholder="Digite o contacto" required>
                        </div>
                        
                        
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" data-dismiss="modal">Registar</button>
            </div>
        </div>
    </div>
</div> 

<!-- Add supplier modal end -->


<!-- Start category modal -->
<div class="row">
<div class="modal fade lg " id="addCategory">
    <div class="modal-dialog modal-dialog-centered" >
        <div class="modal-content px-3">
            <div class="modal-header">
                <h5 class="modal-title">Registar nova categoria <h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-row col-md-12 p-0">
                        <div class="form-group col-md-12 p-0">
                            <label>Nome <i style="color: red;">*</i></label>
                            <input type="text" id="categoryName" class="form-control" placeholder="Digite o nome da categoria">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Registar</button>
            </div>
        </div>
    </div>
</div> 
</div>



<!-- End category modal -->
<div id="_passwordModal"></div>
<div class="footer">
    <div class="copyright " id="footer-info">
    </div>
</div>
     
    
